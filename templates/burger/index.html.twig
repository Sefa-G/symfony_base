{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Liste Burger{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 style="text-align:center">Liste des burgers</h1>

    <div style="display:flex ; justify-content:center ; align-items:center">
        <a href="{{ path('create_burger') }}" style="text-decoration:none"><button class="btn btn-success">Ajouter</button></a><br>
        <a href="{{ path('app_home') }}" style="text-decoration:none ;   margin-left:20px"><button class="btn btn-danger">Accueil</button></a><br>
    </div>

    <div class="container">
        <div class="row">

            {% for burger in burgers %}
                <div class="col-sm-3" style="margin-top:20px">
                    <div class="card" style="width: 12rem; text-align:center">
                        <img class="card-img-top" src="{{ asset("/img/" ~ burger.image.source) }}" alt="image">
                        <div class="card-body">
                            <h5 class="card-title" style="font-size:20px">{{ burger.name }}</h5>
                            <p class="card-text" style="font-weight:bold">{{ burger.price }} €</p>
                            <a href="{{ path('show_burger' , {'id': burger.id})  }}" class="btn btn-primary">Détail</a>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
</div>

{% endblock %}
